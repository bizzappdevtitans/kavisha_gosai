<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="view_subject_details_tree" model="ir.ui.view">
        <field name="name">subject.details.tree</field>
        <field name="model">subject.details</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="standard"/>
                <field name="subject_teacher"/>
            </tree>
        </field>
    </record>

    <record id="view_subject_details_search" model="ir.ui.view">
        <field name="name">subject.details.search</field>
        <field name="model">subject.details</field>
        <field name="arch" type="xml">
            <search>
                <filter string="Standard" name="standard"
                    context="{'group_by': 'standard'}"/>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="view_subject_details_form" model="ir.ui.view">
        <field name="name">subject.details.form</field>
        <field name="model">subject.details</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <notebook>
                        <page string="Subject Information">
                            <div class="oe_button_box" name="button_box">
                                <button name="action_open_student_details" type="object" class="oe_stat_button" icon="fa-duotone fa-user">
                                    <div class="o_stat_info">
                                        <field name="student_count"
                                        class="o_stat_value"/>
                                        <span class="o_stat_text">Student</span>
                                    </div>
                                </button>
                            </div>
                            <group>
                                <field name="name"/>
                                <field name="standard"/>
                                <field name="subject_teacher"/>
                                <field name="students"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_subject_details"
        model="ir.actions.act_window">
        <field name="name">subject.details</field>
        <field name="res_model">subject.details</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
