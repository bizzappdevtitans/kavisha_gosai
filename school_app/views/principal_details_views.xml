<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="view_principal_details_tree" model="ir.ui.view">
        <field name="name">principal.details.tree</field>
        <field name="model">principal.details</field>
        <field name="arch" type="xml">
            <tree  editable="bottom">
                <field name="principal_ref" string="PrincipalID" readonly="1"
                    decoration-bf="1"/>
                <field name="name"/>
                <field name="age"/>
                <field name="year"/>
            </tree>
        </field>
    </record>

    <record id="action_principal_details"
        model="ir.actions.act_window">
        <field name="name">Principal</field>
        <field name="res_model">principal.details</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>
