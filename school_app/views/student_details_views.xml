<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="view_student_details_tree" model="ir.ui.view">
        <field name="name">student.details.tree </field>
        <field name="model">student.details</field>
        <field name="arch" type="xml">
            <tree decoration-danger="percentage &lt;= 35" decoration-success=
                    "percentage &gt; 35" string="Student">
                <field name="first_name" widget="badge" optional="show"/>
                <field name="age" optional="show"/>
                <field name="gender" optional="show"/>
                <field name="current_standard" optional="show"/>
                <field name="priority" widget="priority" optional="show"/>
                <field name="percentage" widget="percentpie" optional="show"/>
                <field name="teacher_name" optional="hide"/>
                <field name="result" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </tree>
        </field>
    </record>

    <record id="view_student_details_search" model="ir.ui.view">
        <field name="name">student.details.search</field>
        <field name="model">student.details</field>
        <field name="arch" type="xml">
            <search>
                <filter string="Gender" name="gender"
                    context="{'group_by': 'gender'}"/>
                <field name="first_name"/>
                <searchpanel>
                    <field name="teacher_name" enable_counters="1"
                        icon="fa-solid fa-user"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="view_student_details_graph" model="ir.ui.view">
        <field name="name">student.details.graph</field>
        <field name="model">student.details</field>
        <field name="arch" type="xml">
            <graph>
                <field name="first_name"/>
                <field name="percentage" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="view_student_details_form" model="ir.ui.view">
        <field name="name">student.details.form</field>
        <field name="model">student.details</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <notebook>
                        <page string="Student Profile">
                            <div class="oe_button_box" name="button_box">
                                <button name="action_open_teacher_details" type="object" class="oe_stat_button" icon="fa-duotone fa-user" attrs="{'invisible': [ ('teacher_count', '=', 0)]}">
                                    <div class="o_stat_info">
                                            <field name="teacher_count"
                                            class="o_stat_value"/>
                                            <span class="o_stat_text">ClassTeacher</span>
                                    </div>
                                </button>
                                 <button name="action_open_subject_details" type="object" class="oe_stat_button" icon="fa-solid fa-book" attrs="{'invisible': [ ('subject_count', '=', 0)]}">
                                    <div class="o_stat_info">
                                        <field name="subject_count"
                                        class="o_stat_value"/>
                                        <span class="o_stat_text">Subjects</span>
                                    </div>
                                </button>
                            </div>
                            <div class="oe_title" name="student_title">
                                <h2><field name="first_name" style="margin-right:10px;"/>
                                    <field name="last_name"/></h2>
                            </div>
                            <group>
                                <group>
                                    <field name="image" widget="image" class="oe_avtar"
                                        options='{"size":[50,50]}'/>
                                    <field name="first_name"/>
                                    <field name="middle_name"/>
                                    <field name="last_name"/>
                                    <field name="address"/>
                                    <field name="student_id"/>
                                </group>
                                <group>
                                    <field name="DOB"/>
                                    <field name="age"/>
                                    <field name="current_standard"/>
                                    <field name="gender"/>
                                    <field name="priority" widget="priority"/>
                                    <field name="remark"/>
                                </group>
                            </group>
                        </page>
                        <page string="Previous Academic">
                            <group>
                                <group>
                                    <field name="last_standard"/>
                                </group>
                                <group>
                                    <field name="last_year_marks" widget="percentage"/>
                                </group>
                            </group>
                        </page>
                        <page string="Emeregeny Contact
                            Information">
                            <group>
                                <group>
                                    <field name="emergency_conatct_name"/>
                                    <field name="emergency_conatct_number"/>
                                </group>
                                <group>
                                    <field name="relation"/>
                                </group>
                            </group>
                        </page>
                        <page string="Class Teacher">
                            <group>
                                <group>
                                    <field name="teacher_id"/>
                                </group>
                                <group>
                                    <field name="teacher_name"/>
                                </group>
                            </group>
                        </page>
                        <page string="Subject Information">
                            <group>
                                <field name="subject_id"/>
                            </group>
                        </page>
                        <page string="Result">
                            <group>
                                <group>
                                    <field name="result"/>
                                </group>
                                <group>
                                    <field name="total_marks"/>
                                    <button name="compute_percentage" class="btn-primary" string="Percentage" type="object"/>
                                    <field name="percentage"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_student_details"
        model="ir.actions.act_window">
        <field name="name">Student</field>
        <field name="res_model">student.details</field>
        <field name="view_mode">tree,graph,form,search</field>
    </record>

</odoo>

