<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="view_result_details_tree" model="ir.ui.view">
        <field name="name">result.details.tree</field>
        <field name="model">result.details</field>
        <field name="arch" type="xml">
            <tree>
                <field name="result_ref" string="ResultID" readonly="1"
                    decoration-bf="1"/>
                <field name="student_name" optional="show"/>
                <field name="subject_name" widget="badge" optional="show"/>
                <field name="marks" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="view_result_details_search" model="ir.ui.view">
        <field name="name">result.details.search</field>
        <field name="model">result.details</field>
        <field name="arch" type="xml">
            <search>
                <filter string="Exams" name="type_of_exam"
                    context="{'group_by': 'type_of_exam'}"/>
                <searchpanel>
                    <field name="student_name" enable_counters="1"
                        icon="fa-solid fa-users"/>
                    <field name="subject_name" select="multi" enable_counters="1"
                        icon="fa-solid fa-book"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="view_result_details_form" model="ir.ui.view">
        <field name="name">result.details.form</field>
        <field name="model">result.details</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="type_of_exam" widget="statusbar" clickable="True"
                        options="{'clickable':1}" statusbar_visible="1st_mid,2nd_mid,final"/>
                </header>
                <sheet>
                    <notebook>
                        <page string="Result Details">
                            <div class="oe_title" name="exam_title">
                                <h2> <field name="result_ref"/>
                                </h2>
                            </div>
                            <group>
                                <group>
                                    <field name="student_name"/>
                                    <field name="color" widget="color_picker"/>
                                </group>
                                <group>
                                    <field name="subject_name"/>
                                    <field name="marks"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_result_details"
        model="ir.actions.act_window">
        <field name="name">Result</field>
        <field name="res_model">result.details</field>
        <field name="view_mode">tree,form,search</field>
    </record>

</odoo>
