<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="view_event_details_tree" model="ir.ui.view">
        <field name="name">event.details.tree</field>
        <field name="model">event.details</field>
        <field name="arch" type="xml">
            <tree>
                <field name="event_ref" string="EventID" readonly="1"
                    decoration-bf="1"/>
                <field name="sequence" widget="handle"/>
                <field name="event_name" widget="badge"/>
                <field name="standard" optional="show"/>
                <field name="type_of_event" optional="show"/>
                <field name="event_date" widget="remaining_days" optional="show"/>
                <field name="teacher_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </tree>
        </field>
    </record>

    <record id="view_event_details_search" model="ir.ui.view">
        <field name="name">event.details.search</field>
        <field name="model">event.details</field>
        <field name="arch" type="xml">
            <search>
                <filter string="EventType" name="type_of_event"
                    context="{'group_by': 'type_of_event'}"/>
                <field name="event_name"/>
            </search>
        </field>
    </record>

    <record id = "view_event_details_calendar"
        model = "ir.ui.view">
        <field name="name">event.details.calendar</field>
        <field name="model">event.details</field>
        <field name="arch" type="xml">
            <calendar string="Event Date" date_start="event_date" color="event_name">
                <field name="standard"/>
                <field name="teacher_ids" widget="many2many_tags"/>
                <field name="event_timing"/>
                <field name="type_of_event"/>
            </calendar>
        </field>
    </record>

    <record id="view_event_details_activity" model="ir.ui.view">
        <field name="name">details.event</field>
        <field name="model">event.details</field>
        <field name="arch" type="xml">
           <activity string="Events">
                <field name="teacher_ids"/>
                <templates>
                    <div t-name="activity-box">
                            <field name="event_name" display="full"/>
                    </div>
                </templates>
            </activity>
        </field>
    </record>

    <record id="view_event_details_form" model="ir.ui.view">
        <field name="name">event.details.form</field>
        <field name="model">event.details</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="standard" widget="statusbar" clickable="True"
                        options="{'clickable':1}" statusbar_visible="1_to_5,6_to_10,11_12"/>
                </header>
                <sheet>
                    <notebook>
                        <page string="Event Information">
                            <div class="oe_title" name="event_title">
                                <h2><field name="event_ref"/>
                                </h2>
                            </div>
                            <group>
                                <group>
                                    <field name="event_name"/>
                                    <field name="event_date"/>
                                    <field name="teacher_ids" widget="many2many_tags"/>
                                </group>
                                <group>
                                    <field name="type_of_event"/>
                                    <field name="event_timing"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_event_details"
        model="ir.actions.act_window">
        <field name="name">event</field>
        <field name="res_model">event.details</field>
        <field name="view_mode">tree,calendar,activity,form,search</field>
    </record>

    <menuitem id="activity_example_root" name="Activity view" sequence="10"></menuitem>
</odoo>
